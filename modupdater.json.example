  "_comment6": "========================================",
  "configSource": {
    "type": "github",
    "repo": "wcholmes42/modpack-configs",
    "path": "packs/family-pack.json",
    "branch": "main"
  },
  "enabled": true,
  "autoDownload": true,
  "autoInstall": true,
  "managedMods": [
    {
      "modId": "landscaper",
      "githubRepo": "wcholmes42/minecraft-landscaper",
      "jarPattern": "landscaper-{version}.jar",
      "enabled": true,
      "updateChannel": "stable"
    }
  ]
}

